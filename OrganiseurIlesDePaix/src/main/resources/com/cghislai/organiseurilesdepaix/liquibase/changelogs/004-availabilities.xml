<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="0" author="cghislai">
        <createTable tableName="availability">
            <column name="ID" type="BIGINT(19)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="USER_ID" type="BIGINT(19)" >
                <constraints nullable="false" />
            </column>
            <column name="LOCATION_ID" type="BIGINT(19)" >
                <constraints nullable="false" />
            </column>
            <column name="CAMPAIGNDAY_ID" type="BIGINT(19)" >
                <constraints nullable="false" />
            </column>
            <column name="STARTTIME" type="TIME" >
                <constraints nullable="false" />
            </column>
            <column name="ENDTIME" type="TIME" >
                <constraints nullable="false" />
            </column>
            <column name="PERSONAMOUNT" type="INT" >
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1" author="cghislai">
        <addForeignKeyConstraint baseTableName="availability" baseColumnNames="USER_ID"
                                 constraintName="FK_AVAILABILITY_USER" 
                                 referencedTableName="ouser" referencedColumnNames="ID"/>
    </changeSet>
    <changeSet id="2" author="cghislai">
        <addForeignKeyConstraint baseTableName="availability" baseColumnNames="LOCATION_ID"
                                 constraintName="FK_AVAILABILITY_LOCATION" 
                                 referencedTableName="location" referencedColumnNames="ID"/>
    </changeSet>
    <changeSet id="3" author="cghislai">
        <addForeignKeyConstraint baseTableName="availability" baseColumnNames="CAMPAIGNDAY_ID"
                                 constraintName="FK_AVAILABILITY_CAMPAIGNDAY" 
                                 referencedTableName="campaign_day" referencedColumnNames="ID"/>
    </changeSet>
    
</databaseChangeLog>